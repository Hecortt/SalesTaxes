@model SalesTaxes.Models.Item
@{
    ViewData["Title"] = "Form Item";
}

<h4>Add item in single line</h4>

<div class="card">
    <div class="card-header">
        <h5> Structture Input : Qty / Imported (if exist) / NameItem / "at" / Price  </h5>
    </div>
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-12 col-sm-12 col-md-6">
                <label class="control-label">Quantity</label>
                @Html.TextBoxFor(m => m.Qty, new { @class = "form-control", @autcomplete = "off", @type = "text" })
            </div>
            <div class="form-group col-12 col-sm-12 col-md-6">
                <label class="control-label">Imported</label>
                @Html.CheckBoxFor(m => m.Imported, new { @class = "form-control", @autcomplete = "off", @type = "checkbox" })
            </div>
            <div class="form-group col-12 col-sm-12 col-md-6">
                <label class="control-label">Name Item</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @autcomplete = "off", @type = "text" })
            </div>
            <div class="form-group col-12 col-sm-12 col-md-6">
                <label class="control-label">Price</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @autcomplete = "off", @type = "text" })
            </div>
        </div>

        </div>
        <div class="card-footer">
            <div class="pr-3">
                <a href="@Url.Action("ListItems", "Home")" class="btn btn-dark">Return</a>
                <button type="submit" class="btn btn-success" name="submit" id="new" value="new">Save Item</button>
            </div>
        </div>
    </div>